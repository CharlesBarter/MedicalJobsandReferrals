<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:id="@+id/singleItemOnlistViewLayout"
    android:descendantFocusability="blocksDescendants"
    android:longClickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemNoteImage"
        android:src="@drawable/ic_priority_high_xhdpi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:longClickable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemPatientName"
        android:text="Patient\'s Name"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/listItemNoteImage"
        android:layout_toStartOf="@+id/listItemPatientNHI"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemPatientNHI"
        android:textAppearance="?android:textAppearanceLarge"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="7"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/listItemPatientName"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemDetails"
        android:layout_below="@id/listItemPatientName"
        android:layout_toEndOf="@id/listItemNoteImage"
        android:layout_toStartOf="@+id/list_age_sex"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="testing the length"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_age_sex"
        android:layout_below="@id/listItemPatientNHI"
        android:text="111M"
        android:textAppearance="?android:textAppearanceListItem"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:gravity="right"/>



</RelativeLayout>
